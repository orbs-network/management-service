{
    "name": "@orbs-network/management-service",
    "private": true,
    "version": "0.0.1",
    "description": "read orbs state from the network and expose it",
    "author": "Amir Arad <amir@orbs.com>",
    "license": "MIT",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js"
    ],
    "engines": {
        "node": ">=12.13.0"
    },
    "scripts": {
        "typecheck": "tsc --noEmit --skipLibCheck",
        "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "pretest": "npm run typecheck && npm run lint",
        "clean": "rimraf ./dist/",
        "prebuild": "npm run clean",
        "build": "tsc --skipLibCheck -p ./tsconfig.prod.json && docker build -t local/management-service .",
        "test": "ava --verbose --serial",
        "test:quick": "echo '-- TEST --' && ava --verbose",
        "test:e2e": "ava --verbose --serial --config ./ava.config.e2e.js",
        "prepack": "npm run build",
        "prettify": "npx prettier \"src/**/*.ts\" --write",
        "start": "node --async-stack-traces ./dist/main.js",
        "start:eth": "ganache-cli -p 7545 -i 5777 -a 10 -m  \"vanish junk genuine web seminar cook absurd royal ability series taste method identify elevator liquid\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettify"
        }
    },
    "devDependencies": {
        "@types/luxon": "^1.22.0",
        "@types/mock-fs": "^4.10.0",
        "@types/node": "^12.12.31",
        "@types/node-fetch": "^2.5.5",
        "@types/yargs": "^15.0.4",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "ava": "^3.5.1",
        "docker-compose-mocha": "^1.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "ganache-cli": "^6.9.1",
        "husky": "^4.2.3",
        "mock-fs": "^4.11.0",
        "nock": "^12.0.3",
        "rimraf": "^3.0.2",
        "ts-node": "^8.8.1",
        "ts-retry-promise": "^0.2.0",
        "typescript": "~3.7.5"
    },
    "dependencies": {
        "@orbs-network/orbs-ethereum-contracts-v2": "^0.0.2",
        "deepmerge": "^4.2.2",
        "docker-hub-utils": "^1.10.28",
        "ethers": "^4.0.46",
        "node-fetch": "^2.6.0",
        "web3": "^1.2.6",
        "yargs": "^15.3.1"
    }
}
